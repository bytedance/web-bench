<% if (locals.username) { %>
  <h1>Hello <%= username %>!</h1>
<% } else { %>
  <h1>🛍️🛍️🛍️ Welcome to Shopping Mart !</h1>
<% } %>
<a href="/products" class="home-go-products-link">View Our Products</a>

<% if (locals.username) { %>
  <a href="/wishlist" class="home-go-wish-list">My Wishlist ❤️</a>
<% } %>

