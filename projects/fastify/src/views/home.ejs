    <a href="/admin/products" class="home-go-product-portal-link">Product Management Portal</a>
    <a href="/admin/users" class="home-go-user-portal-link">User Management Portal</a>
    <a href="/admin/orders" class="home-go-order-portal-link">Order Management Portal</a>
  </div>
<% } %>